@using OrderingSystemDashboard.Models.ViewModels
@model List<CategoryViewModel>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Num</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">ImageUrl</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td> <img src="/uploads/@item.imageUrl" alt="Uploaded File" style="max-width: 300px;" /></td>
                    <td>
                        <a class="btn btn-danger" asp-area="Dashboard" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-warning" asp-area="Dashboard" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
