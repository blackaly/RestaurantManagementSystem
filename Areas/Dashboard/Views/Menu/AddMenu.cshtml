@using OrderingSystemDashboard.Models.ViewModels.Shared
@model MenuViewModelAndMenuModel;

@{
    ViewData["Title"] = "Menu";
}


<h1>Menu</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddMenu" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.menuViewModel.Name" class="control-label"></label>
                <input asp-for="@Model.menuViewModel.Name" class="form-control" />
                <span asp-validation-for="@Model.menuViewModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col">Num</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.menu)
        {
            <tr>
                <th scope="row">@item.Id</th>
                 <td>@item.Name</td>
                 <td>
                    <button class="btn btn-danger">Delete</button>
                    <button class="btn btn-warning">Edit</button>
                 </td>
        </tr>
        }
    </tbody>
</table>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
