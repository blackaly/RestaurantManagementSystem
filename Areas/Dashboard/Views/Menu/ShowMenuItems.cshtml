@using OrderingSystemDashboard.Models.ViewModels
@model List<ShowMenuItemViewModel>
@{
    ViewData["Title"] = "Show Items";
}

<h1>Show Menu Items</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Num</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Menu Name</th>
            <th scope="col">Category Name</th>
            <th scope="col">Number of Promotions</th>
            <th scope="col">Number Of Available Item</th>

            <th scope="col">Image</th>

            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @for (int i = 0; i < Model.Count; ++i)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>@Model[i].Price</td>
                    <td>@Model[i].MenuName</td>
                    <td>@Model[i].CategoryName</td>
                    <td>@Model[i].NumberOfPromotions</td>
                    <td>@Model[i].NumberOfAvaliableItem</td>

                    <td> <img src="/uploads/@Model[i].ImageUrl" alt="Uploaded File" style="max-width: 100px;" /></td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Menu" asp-route-id="@Model[i].Id">Delete</a>
                        <a class="btn btn-warning" asp-action="EditMenuItem" asp-controller="Menu" asp-route-id="@Model[i].Id">Edit</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
