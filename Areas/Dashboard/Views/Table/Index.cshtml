@using OrderingSystem.Areas.Dashboard.Models.ViewModels;
@model List<TableViewModel>

@{
    ViewData["Title"] = "Table";
}


<h1>Table</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Rows</th>
            <th scope="col">Table Number</th>
            <th scope="col">Seating Capacity</th>
            <th scope="col">Is Available?</th>
            
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            @for (int i = 0; i < Model.Count; ++i)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].TableNumber</td>
                    <td>@Model[i].SeatingCapacity</td>
                    
                        @if(Model[i].TableAvabilityStatus == OrderingSystem.Models.Enums.TableAvabilityStatus.Occupied)
                        {
                        <td>
                            No
                        </td>
                        }else
                        {

                    <td>
                        Yes
                    </td>
                        }
                        <td>
                        <a class="btn btn-danger" asp-area="Dashboard" asp-action="Delete" asp-controller="Table" asp-route-tableNumber="@Model[i].TableNumber">Delete</a>
                        <a class="btn btn-warning" asp-area="Dashboard" asp-action="Update" asp-controller="Table" asp-route-tableNumber="@Model[i].TableNumber">Update</a>
                        <a class="btn btn-primary" asp-area="Dashboard" asp-action="Details" asp-controller="Table" asp-route-tableNumber="@Model[i].TableNumber">Details</a>
                        </td>
                       </tr>
                
            }
        }

    </tbody>
</table>