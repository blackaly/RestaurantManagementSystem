@using OrderingSystem.Areas.Dashboard.Models.ViewModels;
@model TableViewModel

@{
       ViewData["Title"] = "Table";
}


<h1>Add Table</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.TableNumber" class="control-label"></label>
                <input asp-for="@Model.TableNumber" class="form-control"/>
                <span asp-validation-for="@Model.TableNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.SeatingCapacity" class="control-label"></label>
                <input asp-for="@Model.SeatingCapacity" class="form-control" />
                <span asp-validation-for="@Model.SeatingCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>